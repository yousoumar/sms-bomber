<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">



        <EditText
            android:id="@+id/message_bomber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/message_bomber"
            android:inputType="text" />

        <EditText
            android:id="@+id/message_bomber_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/message_bomber_phone_number"
            android:inputType="phone" />

        <EditText
            android:id="@+id/message_bomber_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints=""
            android:ems="10"
            android:hint="@string/message_bomber_number"
            android:inputType="text" />

        <Button
            android:id="@+id/make_bomber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/make_bomber" />


    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/settings_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
